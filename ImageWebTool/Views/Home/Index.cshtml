@using System.Text.RegularExpressions
@using System.Web.UI.WebControls
@using ServiceSupport
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Page.Title = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <!--Sidebar content-->
            <ul class="list-group" style="max-height: 800px; overflow-y:scroll;">
                @{
                    for (int i = 0; i < @ViewBag.Issues.Count; i++)
                    {
                        <li class="list-group-item">
                            <span class="label label-default">@ViewBag.Issues[i].ImageHash</span>
                            <a href="#" class="thumbnail">
                                <img src="http://r.rdcpix.com/v01/l5cc10655-r5O.jpg" />
                            </a>
                            <span class="badge">@ViewBag.Issues[i].NumListingsSharingImage</span>
                            <a href="#" class="btnShow" id="@i" onclick="showDuplicates(@i)">View @i</a>
                        </li>
                    }
                }
            </ul>
        </div>
        <div class="col-md-9">
            <!--Body content-->
            <div id="target"></div>
        </div>
    </div>
</div>
<script type="text/javascript">
    
    function showDuplicates(index) {
        $.ajax(
            {
                type: "POST",
                url: "@Url.Action("ShowDuplicateImages","Home")",
                data: "index="+index,
                success: function (result) {
                    $("#target").empty();
                    $("#target").html(result);
                }
            }
        );        
    }
</script>